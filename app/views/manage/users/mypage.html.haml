      = link_to posted_manage_novels_path do
        %li.user-works-list__item
          = icon('fas', 'book', class: "m-font-awesome-book")
          小説
      = link_to posted_manage_illustrations_path do
        %li.user-works-list__item
          = icon('far', 'image', class: "m-font-awesome-image")
          イラスト
      = link_to posted_manage_comics_path do
