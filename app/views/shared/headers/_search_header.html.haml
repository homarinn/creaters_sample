.search-header
  .l-header-wrapper
    .search-form-container
      = form_with url: search_path, local: true, class: "search-form" do |f|
        .search-form__box
          .select-group.m-border-radius-1
            = f.select :work_type, [["シリーズ", "series"], ["単体", "single"]], {}, { class: "select-group__select-work_type" }
          .text-field-group.m-has-search-icon-1
            = f.text_field :keyword, placeholder: "作品を検索する", class: "text-field-group__keyword-field m-border-radius-1"
            = search_icon
          .submit-group
            = f.button "", class: "btn-hidden"
    - if @keyword
      .search-result-container
        %h2.search-result-container__title= @keyword
        %h4.search-result-container__count= "#{@count}作品見つかりました"