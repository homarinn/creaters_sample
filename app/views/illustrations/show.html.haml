- if @illustration.series_illustration?
  .work-info-box
    .work-info-box__work-series
      .work-info-box__work-series--title
        = @illustration.decorate.work_series_for_display
    .work-info-box__user
      %p
        作者:&nbsp;
        = link_to @illustration.user.nickname, @illustration.user
  .work-episode-number
    %p= @illustration.decorate.episode_number_for_display
.work-information
  .work-title-box
    %h2.work-title-box__title
      = @illustration.title
  - if @illustration.single_illustration?
    .clearfix
      .work-user-box
        = link_to @illustration.user do
          .work-user-box__label
            = @illustration.user.decorate.icon_for_display(36)
          .work-user-box__user
            = @illustration.user.nickname
  - if !@illustration.series_illustration?
    .illustration-author-comment-box
      %p.illustration-author-comment-box__author-comment
        = @illustration.author_comment
    = render 'works/detail', work: @illustration
.work-main-content-container
  .illustration-image-area
    = @illustration.decorate.image_for_display(width: 600)
  .work-bottom-area
    - if @illustration.series_illustration?
      .work-episode-link-box
        .work-episode-link-box__episode-link
          = @illustration.decorate.next_and_prev_episode_link
        .work-episode-link-box__toc-link
          = link_to "目次", @illustration.illustration_series, class: "work-episode-link-box__toc-link"